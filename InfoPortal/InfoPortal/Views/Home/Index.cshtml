
@{
    ViewData["Title"] = "Index";
}

<h1>Info Portal</h1>

<h2>List of articles</h2>

@foreach (var article in ViewBag.Articles)
{
    <div class="card" style="width: 40rem;">
        <div>
            <span class="float-left">@article.AddedOn</span>
            <span class="float-right">@article.Language</span>
        </div>

        <div class="card-body">
            <h5 class="card-title">@article.Name</h5>
            <p>Themes</p>
            <ul>
                <li>@article.Theme</li>             
            </ul>
            <img class="card-img-top" src="..." alt="Some awesome picture could be here">
            <a href="#" class="d-block btn btn-primary">Show details</a>
        </div>
    </div>   
}