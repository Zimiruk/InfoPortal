@model InfoPortal.WebMVC.Models.LoginViewModel

@Html.ValidationMessage("LogOnError")

<div class="login-form">
    <form asp-action="Login" asp-controller="User" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly">
        </div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input type="text" class="form-control" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>

            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-outline-dark" />
            </div>
        </div>

    </form>

</div>
