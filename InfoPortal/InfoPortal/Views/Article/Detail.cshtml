@{
    ViewData["Title"] = "Article";
}

@section Scripts {
    <script>

        let mode = 'edit';

        $(document).ready(function () {

            $("#modeButton").click(function () {
                changePage();
            });

            function changePage() {

                if (mode == 'content') {
                    mode = 'edit';
                    $("#modeButton").html('View');
                    $("#div1").load("@Url.Action("Update", "Article", new { id = @ViewBag.Id })");
                }

                else if (mode == 'edit') {
                    mode = 'content';
                    $("#modeButton").html('Edit');
                    $("#div1").load("@Url.Action("Content", "Article", new { id = @ViewBag.Id })");
                }
            }

            changePage();

        });
    </script>
}

@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{

    <button type="button" class="d-inline  btn btn-primary float-right" onclick="location.href='@Url.Action("Update", "Article", new { id = @ViewBag.Id})'">Edit</button>
    <button type="button" class="d-inline  btn btn-danger float-right" onclick="location.href='@Url.Action("Delete", "Article", new { id = @ViewBag.Id})'">Delete</button>
}

<div id="div1"></div>
