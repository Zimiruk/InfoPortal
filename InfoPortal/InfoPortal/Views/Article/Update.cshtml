@model InfoPortal.Common.Models.Article

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<form asp-action="Update" asp-route-id=@Model.Id>
    <!--STYLE-->
    <div class="form-group" style="margin-left:20px; margin-right:20px">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" />
    </div>
    <div class="form-group" style="margin-left:20px; margin-right:20px">
        <label asp-for="Theme">Theme</label>
        <input asp-for="Theme" type="text" class="form-control" id="theme" />
    </div>
    <div class="form-group" style="margin-left:20px; margin-right:20px">
        <label asp-for="Language">Language</label>
        <input asp-for="Language" type="text" class="form-control" id="language" />
    </div>
    <button type="submit" value="Update" style="margin-left:20px" ; class="btn btn-primary">Save</button>
</form>